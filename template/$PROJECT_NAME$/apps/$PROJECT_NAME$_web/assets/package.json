<% MixTemplates.ignore_file_and_directory_unless(assigns[:assets] != nil) %>
{
  "repository": {},
  "license": "MIT",
  "scripts": {<%= if assigns[:asset_bundler] == "brunch" do %>
    "deploy": "brunch build --production",
    "watch": "brunch watch --stdin"
  <% end %><%= if assigns[:asset_bundler] == "webpack" do %>
    "deploy": "webpack -p",
    "watch": "webpack --watch --color"
  <% end %>},
  "dependencies": {
    "phoenix": "file:../../../deps/phoenix",
    "phoenix_html": "file:../../../deps/phoenix_html"
  },
  "devDependencies": {<%= if assigns[:asset_bundler] == "brunch" do %>
    "babel-brunch": "^6.1.1",
    "brunch": "^2.10.9",
    "clean-css-brunch": "^2.10.0",
    "uglify-js-brunch": "^2.10.0",
    "sass-brunch": "^2.10.4"
  <% end %><%= if assigns[:asset_bundler] == "webpack" do %>
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-strip": "^0.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-preset-es2015": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "import-glob-loader": "^1.1.0",
    "node-sass": "^4.5.2",
    "sass-loader": "^6.0.3",
    "standard": "^10.0.2",
    "style-loader": "^0.16.1",
    "webpack": "^3.5.5"
  <% end %>}
}